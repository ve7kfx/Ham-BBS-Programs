import curses
import requests

# API key for the News API
API_KEY = 'your_api_key_here'

# Initialize curses screen
screen = curses.initscr()

# Set up colors
curses.start_color()
curses.init_pair(1, curses.COLOR_WHITE, curses.COLOR_BLUE)
curses.init_pair(2, curses.COLOR_YELLOW, curses.COLOR_BLACK)

# Define function to get news articles from the News API
def get_news_articles(query):
    url = f'https://newsapi.org/v2/everything?q={query}&apiKey={API_KEY}'
    response = requests.get(url)
    articles = response.json()['articles']
    return articles

# Define function to display news articles in the curses interface
def display_articles(articles):
    screen.clear()
    screen.addstr(0, 0, 'News Articles', curses.color_pair(1))
    for i, article in enumerate(articles):
        title = article['title']
        description = article['description']
        source = article['source']['name']
        screen.addstr(i+2, 0, f'{i+1}. {title}', curses.color_pair(2))
        screen.addstr(i+3, 2, f'{description}')
        screen.addstr(i+4, 2, f'From: {source}')
    screen.refresh()

# Main function
def main():
    # Set up curses
    curses.noecho()
    curses.cbreak()
    screen.keypad(True)

    # Display initial message
    screen.addstr(0, 0, 'Enter a search term:', curses.color_pair(1))
    screen.refresh()

    # Get user input
    query = ''
    while True:
        c = screen.getch()
        if c == curses.KEY_ENTER or c == 10:
            break
        elif c == curses.KEY_BACKSPACE or c == 127:
            query = query[:-1]
        else:
            query += chr(c)
        screen.addstr(1, 0, ' ' * (curses.COLS-1))
        screen.addstr(1, 0, query)
        screen.refresh()

    # Get news articles and display them
    articles = get_news_articles(query)
    display_articles(articles)

    # Wait for user to exit
    screen.getch()

    # Clean up curses
    curses.nocbreak()
    screen.keypad(False)
    curses.echo()
    curses.endwin()

if __name__ == '__main__':
    main()
